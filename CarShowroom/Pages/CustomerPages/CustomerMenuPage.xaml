<Page x:Class="CarShowroom.Pages.CustomerPages.CustomerMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:CarShowroom.Pages.CustomerPages"
      mc:Ignorable="d"
      Title="Меню клиента"
      d:DesignHeight="450"
      d:DesignWidth="800">

    <StackPanel Orientation="Vertical">
        <Button x:Name="CarButton" Style="{StaticResource Button-Style}"
                Content="Список автомобилей" Click="CarButton_OnClick"/>
        <Button x:Name="RequestButton" Style="{StaticResource Button-Style}"
                Content="Мои заявки" Click="RequestButton_OnClick"/>
    </StackPanel>
</Page>
