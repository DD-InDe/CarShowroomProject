<Page x:Class="CarShowroom.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:CarShowroom.Pages"
      mc:Ignorable="d"
      Title="Авторизация"
      d:DesignHeight="450"
      d:DesignWidth="800">

    <StackPanel Orientation="Vertical"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <TextBlock Text="Логин:"
                       Style="{StaticResource TextBlock-Style}" />
            <TextBox x:Name="LoginBox"
                     Style="{StaticResource TextBox-Style}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <TextBlock Text="Пароль:"
                       Style="{StaticResource TextBlock-Style}" />
            <PasswordBox x:Name="PasswordBox"
                         Style="{StaticResource PasswordBox-Style}" />
        </StackPanel>
        <Button x:Name="AuthButton"
                Content="Войти"
                Click="AuthButton_OnClick"
                Style="{StaticResource Button-Style}" />
    </StackPanel>
</Page>